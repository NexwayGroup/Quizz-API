<div class="page-header">
    <h1>Add question</h1>
</div>

<form action="/question/add/post" method="post" role="form">

    <?php if (isset($categories)): ?>
      <select name="category_id" class="form-control">

        <option value="" disabled selected>Choose Category</option> 

        <?php foreach ($categories as $category): ?>
            
            <?php $subcategories = $category->subcategories(); ?>

            <?php if (!is_null($subcategories)): ?>

                <optgroup label="<?php echo $category->get('category'); ?>">
                    <?php foreach ($subcategories as $subcategory): ?>
                        <option value="<?php echo $subcategory->get('id'); ?>">
                            <?php echo $subcategory->get('category'); ?>
                        </option>
                    <?php endforeach; ?>
                </optgroup>

            <?php endif; ?>
        <?php endforeach; ?>
      </select>
    <?php endif; ?>
    <br />

    <input name="question" type="text" placeholder="Question" class="form-control">
    <br />

    <div class="row">

      <div class="col-lg-6">

        <span class="label label-success">Valid</span>
        <br />
        <br />

        <button
                id="answer-valid-add"
                type="button"
                onclick="quiz.answer.addValid()"
                class="btn btn-default"
        >Add</button>
        <br />

      </div><!-- /.col-lg-6 -->

      <div class="col-lg-6 pull-righ">

        <span class="label label-danger" style="float: right !important;">Invalid</span>
        <br />
        <br />

        <button
                id="answer-invalid-add"
                type="button"
                onclick="quiz.answer.addInvalid()"
                class="btn btn-default pull-righ"
                style="float: right !important;"
        >Add</button>
        <br />

      </div><!-- /.col-lg-6 -->

    </div><!-- /.row -->
    <br />

    <button type="submit" class="btn">Submit</button>

</form>
